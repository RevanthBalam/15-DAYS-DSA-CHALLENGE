class Solution {
    public boolean isPalindrome(String s) {

        String newString = s.toLowerCase();

        String modifiedString = "";
        for(int i = 0;i<newString.length();i++){
            if(Character.isLetterOrDigit(newString.charAt(i))){
                modifiedString+=newString.charAt(i);
            }
        }

        int start = 0;
        int end = modifiedString.length()-1;

        while(start<end){
            if(modifiedString.charAt(start) != modifiedString.charAt(end)){
                return false;
            }
            start+=1;
            end-=1;
        }

        return true;   
    }
}
